---
pagination:
    data: collections.bioPages
    size: 1
    alias: contentPage
permalink: "{{ contentPage.url }}"
---
<div class="header">
    <img class="bg-image" src="{{ contentPage.headerImage.results[0].fileUrl }}" />
    <div class="page-title">{{ contentPage.title }}</div>
</div>

<section class="bio-image">
    <img src="{{ contentPage.profileImage.results[0].fileUrl }}" width="500px" />
</section>

<section class="text-vert-mid bio-detail">
    <p><label class="bio-author">{{ contentPage.author }}</label></p>
    <p>{{ contentPage.jobTitle }}</p>
    <div class="bio-highlights">{{ contentPage.highlights | proseConvert | safe }}</div>
    <p><a href="{{ contentPage.mastodon | mastodonUrl }}" class="bio-mastodon">{{ contentPage.mastodon }}</a></p>
</section>
